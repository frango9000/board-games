# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = crlf
max_line_length = 120

[*.java]
ij_java_method_call_chain_wrap = split_into_lines
ij_java_align_multiline_chained_methods = true
ij_java_align_multiline_method_parentheses = true
ij_java_align_multiline_parameters = true
ij_java_align_multiline_annotation_parameters = true
ij_java_align_multiline_extends_list = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.html]
ij_html_enforce_quotes = true
ij_html_quote_style = double
ij_html_do_not_indent_children_of_tags = none

[*.js]
ij_javascript_enforce_trailing_comma = keep

[*.ts]
ij_typescript_enforce_trailing_comma = keep
ij_typescript_keep_simple_blocks_in_one_line = true
ij_typescript_import_sort_module_name = true
ij_typescript_import_use_node_resolution = true
ij_typescript_import_sort_members = true
ij_typescript_import_prefer_absolute_path = true

[test-setup.ts]
ij_typescript_import_sort_module_name = false

[*.scss]
ij_scss_continuation_indent_size = 2

[pom.xml]
max_line_length = 990
