{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/consumer-pact": ["libs/consumer-pact/src/index.ts"],
      "@app/domain": ["libs/domain/src/index.ts"],
      "@app/domain/mocks": ["libs/domain/src/index.mocks.ts"],
      "@app/ui/core": ["libs/ui/core/src/index.ts"],
      "@app/ui/feature/administration": ["libs/ui/feature/administration/src/index.ts"],
      "@app/ui/feature/authentication": ["libs/ui/feature/authentication/src/index.ts"],
      "@app/ui/feature/home": ["libs/ui/feature/home/src/index.ts"],
      "@app/ui/feature/user": ["libs/ui/feature/user/src/index.ts"],
      "@app/ui/shared/app": ["libs/ui/shared/app/src/index.ts"],
      "@app/ui/shared/common": ["libs/ui/shared/common/src/index.ts"],
      "@app/ui/shared/core": ["libs/ui/shared/core/src/index.ts"],
      "@app/ui/store": ["libs/ui/store/src/index.ts"],
      "@hal-form-client": ["libs/hal-form-client/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "node", "tmp", ".github", ".run", ".idea", ".angular", "apps/api"]
}
